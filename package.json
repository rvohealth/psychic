{
  "name": "@rvohealth/psychic",
  "version": "0.3.4",
  "main": "src/index.ts",
  "author": "RVOHealth",
  "repository": "https://github.com/rvohealth/psychic.git",
  "license": "MIT",
  "private": false,
  "files": [
    "tsconfig.boot.json",
    "tsconfig.build.json",
    "tsconfig.global-cli.json",
    "tsconfig.json",
    "boot/**/*",
    "spec-helpers/**/*",
    "src/**/*"
  ],
  "bin": {
    "psy": "./dist/bin/global-cli/main.js"
  },
  "scripts": {
    "psy": "yarn psyts",
    "psyjs": "node ./dist/boot/cli.js",
    "psyts": "TS_SAFE=1 npx ts-node -r ./boot/cli/helpers/loadAppEnvFromBoot.ts boot/cli.ts",
    "psycore": "PSYCHIC_CORE_DEVELOPMENT=1 APP_ROOT_PATH=$(pwd)/test-app yarn psyts",
    "build:package-json": "DREAM_OMIT_DIST_FOLDER=1 TS_SAFE=1 npx ts-node -r ./src/helpers/loadEnv.ts boot/adapt-package-json.ts",
    "build": "yarn build-boot && yarn psyts build && yarn build:package-json",
    "build-boot": "echo \"bootstrapping psychic...\" && rm -rf dist && npx tsc -p ./tsconfig.boot.json && yarn build:package-json",
    "build:core": "rm -rf dist && APP_ROOT_PATH=$(pwd)/test-app PSYCHIC_CORE_DEVELOPMENT=1 NODE_ENV=development yarn --cwd=node_modules/@rvohealth/dream build && echo \"building psychic core...\" && npx tsc -p ./tsconfig.build-core.json",
    "sync": "NODE_ENV=development yarn --cwd=node_modules/@rvohealth/dream build-boot && NODE_ENV=development yarn --cwd=node_modules/@rvohealth/dream build",
    "syncb": "NODE_ENV=development yarn --cwd=node_modules/@rvohealth/dream build-boot && NODE_ENV=development yarn dream sync:config-cache && yarn --cwd=node_modules/@rvohealth/dream build && yarn build",
    "dream": "rm -rf node_modules/@rvohealth/dream/test-app && yarn --cwd=node_modules/@rvohealth/dream dream",
    "dreamts": "rm -rf node_modules/@rvohealth/dream/test-app && yarn --cwd=node_modules/@rvohealth/dream dreamts",
    "dreamprod": "rm -rf ../../node_modules/@rvohealth/dream/test-app && yarn --cwd=../../node_modules/@rvohealth/dream dream",
    "dev": "APP_ROOT_PATH=$(pwd)/test-app TS_SAFE=1 PSYCHIC_CORE_DEVELOPMENT=1 NODE_ENV=development ts-node ./test-app/main.ts",
    "db:create": "yarn dream db:create",
    "db:drop": "yarn dream db:drop",
    "db:migrate": "yarn dream db:migrate",
    "console": "APP_ROOT_PATH=$(pwd)/test-app PSYCHIC_CORE_DEVELOPMENT=1 TS_SAFE=1 npx ts-node --transpile-only --project ./tsconfig.json ./test-app/conf/repl.ts",
    "uspec:slow": "APP_ROOT_PATH=$(pwd)/test-app PSYCHIC_CORE_DEVELOPMENT=1 yarn psyts sync:all --core && APP_ROOT_PATH=$(pwd)/test-app PSYCHIC_CORE_DEVELOPMENT=1 TS_SAFE=1 jest --config=./spec/unit/jest.config.js --runInBand --forceExit",
    "uspec": "APP_ROOT_PATH=$(pwd)/test-app PSYCHIC_CORE_DEVELOPMENT=1 TS_SAFE=1 jest --config=./spec/unit/jest.config.js --runInBand --forceExit",
    "fspec:slow": "APP_ROOT_PATH=$(pwd)/test-app PSYCHIC_CORE_DEVELOPMENT=1 yarn psyts sync:all --core && APP_ROOT_PATH=$(pwd)/test-app PSYCHIC_CORE_DEVELOPMENT=1 TS_SAFE=1 jest --config=./spec/features/jest.config.js --runInBand --forceExit",
    "fspec": "APP_ROOT_PATH=$(pwd)/test-app PSYCHIC_CORE_DEVELOPMENT=1 TS_SAFE=1 jest --config=./spec/features/jest.config.js --runInBand --forceExit",
    "format": "yarn run prettier . --write",
    "lint": "yarn run eslint --no-warn-ignored \"src/**/*.ts\" \"spec/**/*.ts\" \"test-app/**/*.ts\" \"boot/**/*.ts\" && yarn run prettier . --check"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "@jest-mock/express": "^2.0.2",
    "@socket.io/redis-adapter": "^8.2.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.17",
    "@types/supertest": "^6.0.2",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.1.11",
    "colorette": "^2.0.20",
    "commander": "^12.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "pluralize": "^8.0.0",
    "redis": "^4.6.13",
    "socket.io": "^4.7.4",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2"
  },
  "peerDependencies": {
    "@rvohealth/dream": "^0.3.9-beta3",
    "@types/express": "^4.17.21",
    "@types/express-requests-logger": "^3.0.4",
    "express": "^4.19.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@rvohealth/dream": "^0.3.9-beta3",
    "@types/express": "^4.17.21",
    "@types/express-requests-logger": "^3.0.4",
    "@types/jest-plugin-context": "^2.9.5",
    "eslint": "^9.0.0",
    "express": "^4.19.2",
    "jest-plugin-context": "^2.9.0",
    "prettier": "^3.2.5",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.6.0"
  }
}
